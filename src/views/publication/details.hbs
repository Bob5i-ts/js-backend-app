<main>
    <section id="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{item.title}}</h2>
                <h3>Author: {{item.username}}</h3>
                <h3>Painting technique: {{item.technique}}</h3>
                <h3>Certificate of authenticity: {{item.cert}}</h3>

                {{#if user}}
                    <div class="buttons">
                        {{#if isOwner}}
                            <a href="/post/{{item._id}}/edit" class="btn-edit">Edit</a>
                            <a href="/post/{{item._id}}/delete" class="btn-delete">Delete</a>
                        {{else}}
                            {{#if isShared}}
                                <p class="shared-pub">You already shared this publication</p>
                            {{else}}
                                <a href="/post/{{item._id}}/share" class="btn-share">Share publication</a>
                            {{/if}}
                        {{/if}}
                    </div>
                {{/if}}
            </article>

            <article class="details-card-image">
                <img src="{{item.picture}}" alt="art-image2">
            </article>
        </article>
    </section>
</main>