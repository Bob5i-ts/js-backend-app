<main>
    <section id="gallery">
        <h1>Gallery</h1>
        <article class="gallery-container">
            {{#if posts}}
                {{#each posts}}
                    <article class="card-info">
                        <article class="card-info-image">
                            <img src={{picture}} alt="art-image">
                        </article>
                        <article class="card-info-text">
                            <h2>Title: {{title}}</h2>
                            <h3>Certificate of authenticity: {{cert}}</h3>
                            <a href="/post/details/{{_id}}" class="details-btn">Details</a>
                        </article>
                    </article>
                {{/each}}
            {{else}}
                <article class="no-available-publications">
                    <h1>No publications created yet.</h1>
                    <a href="/post/create" class="create-pub">Create publication</a>
                </article>
            {{/if}}
        </article>
    </section>
</main>